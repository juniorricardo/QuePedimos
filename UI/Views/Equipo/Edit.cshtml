        <div class="form-group">
            <label class="control-label col-md-2">Integrantes</label>

            <div class="row">
                <div class="col-md-3">
                    @Html.DropDownList("Empleados", new SelectList(ViewBag.Usuarios, "Id", "NombreApellido"),
                                                   new
                                                   {
                                                       @class = "form-control chosen-select",
                                                       @multiple = true
                                                   })
                </div>
                @*<div class="col-md-3">
                        @Html.DropDownList("Empleados", new SelectList(ViewBag.listaIntegrantes, "Id", "NombreApellido"),
                                                       new
                                                       {
                                                           @class = "form-control chosen-select",
                                                           @multiple = true
                                                       })
                    </div>
                    <div class="col-md-3">
                        @Html.DropDownList("NuevosEmpleados", new SelectList(ViewBag.noIntegrantes, "Id", "NombreApellido"),
                                                       new
                                                       {
                                                           @class = "form-control chosen-select",
                                                           @multiple = true
                                                       })
                    </div>*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    $('.chosen-select').chosen()
</script>

